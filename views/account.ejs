<%- include('partials/navheader') -%>

<main class="py-5 container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-10 col-lg-8">    
      <!-- Card -->
      <div class="card card-border border-muted shadow-light-lg" data-jarallax-element="-40" style="z-index: 0; transform: translate3d(0px, 16.1003px, 0px);">
        <div class="card-body">
          <div class="row justify-content-center">
            <div class="col-12 col-xl-11">

              <!-- Heading -->
              <h2 class="fw-bold text-center mb-1">
                Account Information
              </h2>

              <!-- Text -->
              <p class="fs-lg text-center text-muted mb-6 mb-md-8">
                Change your account information
              </p>

              <!-- Profile Form -->
              <form action="#" method="POST">
                <div class="mb-3">
                  <label for="userName" class="form-label">
                    User Name
                  </label>
                  <input
                    type="text" 
                    class="form-control" 
                    id="userName" 
                    name="userName"
                  />
                </div>
                <div class="mb-3 password-toggle">
                  <label for="password" class="form-label">
                    Password
                  </label>
                  <input 
                    type="password" 
                    class="form-control" 
                    id="password" 
                    name="password" 
                  />
                </div>
                <div class="mb-3 password-toggle">
                  <label for="confirmPassword" class="form-label">
                    Confirm Password
                  </label>
                  <input 
                    type="password" 
                    class="form-control" 
                    id="confirmPassword" 
                    name="confirmPassword"
                  />
                <button type="submit" class="btn btn-primary mt-3 w-100">Update Profile</button>
              </form>
            </div> <!-- col-12 -->
          </div> <!-- row -->
        </div> <!-- card-body -->
      </div> <!-- card -->
    </div> <!-- col-12 -->
  </div> <!-- row -->
</main>

<%- include('partials/footer') -%>