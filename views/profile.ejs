<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
        <!-- Welcome Back Div -->
          <div>
              <p>Welcome back <%= user.userName %>!</p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <!-- Dashboard -->
          <div class="col-6">
            <p>Dashboard</p> 
            <a href="#" class="btn btn-primary">Create New Character</a>
            <p>Here are your characters: </p>
            <ul class="row list-unstyled">
            <% for(var i=0; i<characters.length; i++) {%>
              <li class="col-6 justify-content-between mt-5">
                <a href="/post/<%= characters[i]._id%>">
                  <img class="image" src="<%= characters[i].image%>">
                </a>
              </li>
            <% } %>
            </ul>
            <div class="row justify-content-center mt-5">
              <a class="btn btn-primary" href="/feed">Return to Feed</a>
            </div>  
          <div class="mt-5">
            <h2>Add a Character</h2>
            <form action="/post/createCharacter" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="name" class="form-label">Name</label>
                  <input type="text" class="form-control" id="name" name="name">
              </div>
              <div class="mb-3">
                <label for="notes" class="form-label">Notes</label>
                <textarea class="form-control" id="notes" name="notes"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>